{
  "name": "minze-server",
  "version": "1.0.0",
  "description": "Minze api server",
  "main": "./build/index.js",
  "keywords": [
    "server"
  ],
  "scripts": {
    "clean": "rm -rf ./build; rm -rf src/schema/generated",
    "db:deploy": "cd prisma; prisma deploy",
    "db:generate": "cd prisma; prisma generate",
    "docker:kill": "docker kill (docker ps -aq); docker rm (docker ps -aq)",
    "docker:stop": "docker stop (docker ps -aq);",
    "docker:up": "docker-compose up -d",
    "generate": "npm-run-all *:generate",
    "lint-staged": "lint-staged",
    "lint:fix": "eslint . --ext .ts,js --fix",
    "lint:ts": "eslint src --fix --ext .js,.ts",
    "lint": "npm-run-all lint:*",
    "build": "npx tsc; yarn run copyFiles",
    "copyFiles": "copyfiles -u 1 src/database/generated/*.graphql src/schema/*.graphql src/schema/**/*.graphql build",
    "setup:production": "yarn run secrets:unpack -e production -r",
    "setup:development": "yarn run secrets:unpack -e development -r",
    "prettier:js": "prettier --write {.,**}/*.js",
    "prettier:json": "prettier --write {.,**}/*.json",
    "prettier:md": "prettier --write {.,**}/*.md",
    "prettier:ts": "prettier --write {.,**}/*.ts",
    "prettier": "npm-run-all prettier:*",
    "precommit": "yarn run lint-staged;",
    "heroku:build_image": "./build.sh 1.34 minze-database",
    "heroku:release_db": "heroku container:release web -a minze-database",
    "resolver:interfaces": "graphql-resolver-codegen interfaces -s src/schema/Schema.graphql -o ./src/resolvers/generated/resolvers.ts",
    "resolver:scaffold": "graphql-resolver-codegen scaffold -s src/schema/Schema.graphql -o ./src/resolvers/generated/scaffold -i ../resolvers",
    "resolver:generate": "npm-run-all resolver:interfaces resolver:scaffold",
    "secrets:pack": "./scripts/secrets.sh -m pack",
    "secrets:unpack": "./scripts/secrets.sh -m unpack",
    "start": "NODE_ENV=production tsc-watch --onSuccess \"node ./build/index.js\"",
    "start:development": "NODE_ENV=development tsc-watch --onSuccess \"node ./build/index.js\"",
    "test": "NODE_ENV=production jest --coverage --verbose --runInBand --forceExit",
    "test:watch": "jest --coverage --verbose --runInBand --watch",
    "codegen": "graphql-codegen"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shubhamxy/minze-server.git"
  },
  "bugs": {
    "url": "https://github.com/shubhamxy/minze-server/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run precommit"
    }
  },
  "lint-staged": {
    "app/**/*.{js,ts,json}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "author": "Shubham Jain <s.shubjain@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@graphql-codegen/cli": "1.6.1",
    "@graphql-codegen/typescript": "1.6.1",
    "@graphql-codegen/typescript-resolvers": "1.6.1",
    "@graphql-modules/core": "^0.7.13",
    "apollo-datasource-rest": "^0.6.6",
    "apollo-server": "^2.9.7",
    "apollo-server-express": "^2.9.7",
    "apollo-server-testing": "^2.9.7",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie": "0.4.0",
    "cookie-parser": "1.4.4",
    "cors": "^2.8.5",
    "date-fns": "2.0.1",
    "dotenv": "^8.0.0",
    "express": "^5.0.0-alpha.7",
    "faker": "4.1.0",
    "firebase": "^7.0.0",
    "firebase-admin": "^8.2.0",
    "firebase-functions": "^3.0.1",
    "graphql": "^14.5.8",
    "graphql-import": "0.7.1",
    "graphql-middleware": "^4.0.1",
    "graphql-postgres-subscriptions": "^1.0.5",
    "graphql-scalars": "1.0.1",
    "graphql-shield": "^6.1.0",
    "graphql-tag": "2.10.1",
    "graphql-tools": "4.0.5",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.15",
    "nexus": "^0.12.0-beta.6",
    "nexus-prisma": "^0.4.2",
    "pg": "7.12.1",
    "prisma-binding": "2.3.16",
    "prisma-client-lib": "^1.34.10",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "sql-template-strings": "2.2.2",
    "supertest": "^4.0.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@firebase/app-types": "^0.4.4",
    "@firebase/util": "^0.2.20",
    "@types/chai": "^4.1.7",
    "@types/compression": "1.0.1",
    "@types/cookie": "0.3.3",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/faker": "4.1.5",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "8.3.4",
    "@types/lodash": "4.14.137",
    "@types/mongoose": "^5.5.18",
    "@types/node": "^12.7.9",
    "@types/pg": "7.11.0",
    "@types/request-promise": "^4.1.42",
    "@types/supertest": "^2.0.7",
    "@types/ws": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "chai": "^4.2.0",
    "copyfiles": "^2.1.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.1",
    "graphql-import-loader": "^0.2.1",
    "graphql-resolver-codegen": "0.3.1",
    "husky": "^3.0.8",
    "jest": "24.9.0",
    "jest-junit": "8.0.0",
    "lint-staged": "^9.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "^1.18.2",
    "prisma": "1.34.8",
    "ts-jest": "^24.0.2",
    "tsc-watch": "^4.0.0",
    "typescript": "3.6.3"
  },
  "resolutions": {
    "graphql": "^14.5.7"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
